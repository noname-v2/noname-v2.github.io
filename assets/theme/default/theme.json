{
	"app": {
		"text-shadow": "black 0 0 2px",
		"color": "white",
		"font": "system-ui",
		"caption-font": "lishu",
		"label-font": "xingkai",
		"background": "@(background.webp) center/cover",
		"transition": "0.3s",
		"transition-fast": "0.2s",
		"transition-slow": "0.5s",
		"transition-faster": "0.1s",
		"transition-slower": "0.7s",
		"blurred-opacity": "0.2",
		"select-opacity": "0.5",
		"splash-transform": "0.8",
		"splash-margin": "13px"
	},

	"arena": {
		"player-width": "150px",
		"player-height": "210px",
		"card-width": "105px",
		"card-height": "147px"
	},

	"button": {
		"font": "xingkai",
		"radius": "100%",
		"background": "@(button.webp)",
		"image-opacity": "0.5",
		"blue-image": "@(button-blue.webp)",
		"green-image": "@(button-green.webp)",
		"grey-image": "@(button-grey.webp)",
		"orange-image": "@(button-orange.webp)",
		"purple-image": "@(button-purple.webp)",
		"red-image": "@(button-red.webp)",
		"yellow-image": "@(button-yellow.webp)",
		"shadow": "rgba(0, 0, 0, 0.4) 0 0 0 1px, rgba(0, 0, 0, 0.2) 0 3px 10px"
	},

	"player": {
		"width": "150px",
		"background": "rgba(0, 0, 0, 0.4)",
		"back-background": "rgba(0, 0, 0, 0.4)",
		"radius": "8px",
		"shadow": "rgba(0, 0, 0, 0.4) 0 0 0 1px, rgba(0, 0, 0, 0.2) 0 3px 10px",
		"back-shadow": "rgba(0, 0, 0, 0.4) 0 0 0 1px, rgba(0, 0, 0, 0.2) 0 3px 10px",
		"selectable": "rgba(0, 0, 0, 0.4) 0 0 0 1px, rgba(0, 133, 255, 0.5) 0 0 5px, rgba(0, 133, 255, 0.6) 0 0 12px, rgba(0, 133, 255, 0.8) 0 0 15px",
		"selected": "rgba(0, 0, 0, 0.4) 0 0 0 1px,rgba(255, 0, 0, 0.4) 0 0 5px, rgba(255, 0, 0, 0.4) 0 0 12px, rgba(255, 0, 0, 0.8) 0 0 15px",
		"image-margin": "3px",
		"image-radius": "6px",
		"image-shadow": "rgba(0, 0, 0, 0.2) 0 0 0 1px",
		"hp-high": "@(hp-high.webp)",
		"hp-mid": "@(hp-mid.webp)",
		"hp-low": "@(hp-low.webp)",
		"hp-lost": "@(hp-lost.webp)",
		"timer-background": "rgba(255,255,255,0.6)",
		"timer-bar-background": "linear-gradient(#FFDA47, #CE0404)",
		"timer-shadow": "rgba(0, 0, 0, 0.2) 0 0 0 1px"
	},

	"card": {
		"background": "@(card.webp)",
		"back-background": "@(cardback.webp)",
		"entry-background": "@(wood.webp)",
		"radius": "8px",
		"shadow": "none",
		"text-shadow": "rgb(237, 232, 219) 0 0 2px, rgb(237, 232, 219) 0 0 2px, rgb(237, 232, 219) 0 0 2px, rgb(237, 232, 219) 0 0 2px, rgb(237, 232, 219) 0 0 2px, rgb(237, 232, 219) 0 0 2px",
		"caption-shadow": "rgb(237, 232, 219) 0 0 3px, rgb(237, 232, 219) 0 0 3px, rgb(237, 232, 219) 0 0 3px, rgb(237, 232, 219) 0 0 3px, rgb(237, 232, 219) 0 0 3px, rgb(237, 232, 219) 0 0 3px",
		"glow-shadow": "rgb(237, 232, 219) 0 0 4px, rgb(237, 232, 219) 0 0 4px, rgb(237, 232, 219) 0 0 4px, rgb(237, 232, 219) 0 0 4px, rgb(237, 232, 219) 0 0 4px, rgb(237, 232, 219) 0 0 4px",
		"color": "rgba(0, 0, 0, 0.8)"
	},

	"widget": {
		"background": "rgba(0, 0, 0, 0.4)",
		"background-popup": "rgba(0, 0, 0, 0.4)",
		"background-light": "rgba(0, 0, 0, 0.2)",
		"radius": "8px",
		"radius-sharp": "4px",
		"shadow": "rgba(0, 0, 0, 0.4) 0 0 0 1px, rgba(0, 0, 0, 0.2) 0 3px 10px",
		"image-margin": "3px",
		"image-margin-sharp": "2px",
		"image-radius": "6px",
		"image-radius-sharp": "3px",
		"image-shadow": "rgba(0, 0, 0, 0.2) 0 0 0 1px",
		"image-shadow-active": "rgba(0, 0, 0, 0.4) 0 0 0 1px",
		"avatar-position": "center -1px"
	},

	"section": {
		"background": "rgba(0, 0, 0, 0.2)",
		"shadow": "rgba(0, 0, 0, 0.35) 0 0 0 1px, rgba(0, 0, 0, 0.08) 0 0 5px inset",
		"radius": "2px"
	},

	"toggle": {
		"radius": "25px",
		"background": "transparent",
		"background-on": "rgba(47, 101, 150,1)",
		"shadow": "rgba(0, 0, 0, 0.4) 0 0 0 1px, rgba(0, 0, 0, 0.2) 0 0 10px inset",
		"button-background": "rgba(75, 75, 75, 1)",
		"button-shadow": "rgba(30, 30, 30, 1) 0 0 0 1px, rgba(0, 0, 0, 0.2) 0 3px 10px",
		"slider-background": "rgba(0, 0, 0, 0.4)",
		"slider-shadow": "rgba(0, 0, 0, 0.4) 0 0 0 1px, rgba(0, 0, 0, 0.2) 0 3px 10px"
	},

	"sidebar": {
		"background": "rgba(0, 0, 0, 0.4)",
		"shadow": "rgba(0, 0, 0, 0.5) 0 0 0 1px, rgba(0, 0, 0, 0.2) 0 3px 10px",
		"header-shadow": "rgba(0, 0, 0, 0.4) 0 0 0 1px, rgba(0, 0, 0, 0.2) 0 3px 10px inset",
		"header-background": "rgba(0, 0, 0, 0.3)",
		"header-background-hover": "rgba(47, 101, 150, 0.3)",
		"header-background-down": "rgba(47, 101, 150, 0.8)",
		"footer-shadow": "rgba(0, 0, 0, 0.3) 0 0 0 1px, rgba(0, 0, 0, 0.2) 0 -3px 10px inset",
		"footer-background": "linear-gradient(rgba(150, 47, 47, 1), rgba(132, 43, 43, 1))",
		"footer-background-hover": "linear-gradient(rgb(180, 47, 47), rgb(162, 43, 43))",
		"footer-background-down": "linear-gradient(rgb(210, 106, 47), rgb(210, 98, 43))"
	},

	"fill": {
		"shadow": "rgba(0, 0, 0, 0.3) 0 0 0 1px, rgba(0, 0, 0, 0.2) 0 3px 10px inset",
		"button-shadow": "rgba(0, 0, 0, 0.6) 0 0 0 1px, rgba(0, 0, 0, 0.2) 0 3px 10px",
		"red": "linear-gradient(rgba(150, 47, 47, 1), rgba(132, 43, 43, 1))",
		"blue": "linear-gradient(rgba(47, 101, 150, 1), rgba(43, 90, 132, 1))",
		"green": "linear-gradient(rgb(89, 161, 81), rgb(73, 136, 70))",
		"cyan": "linear-gradient(rgb(45, 155, 255), rgb(0, 135, 255))",
		"yellow": "linear-gradient(rgb(255, 178, 0), rgb(255, 156, 0))",
		"gray": "linear-gradient(#4b4b4b, #464646)"
	},

	"gallery": {
		"indicator-background": "rgba(0, 0, 0, 0.4)",
		"indicator-background-current": "rgba(255, 255, 255, 0.8)"
	},

	"popup": {
		"transform": "0.8",
		"portrait-width": "410px",
		"portrait-height": "480px",
		"landscape-width": "520px",
		"landscape-height": "410px",
		"dialog-width": "300px"
	},

	"icon": {
		"back": "@(icon-back.svg)",
		"user": "@(icon-user.svg)",
		"clear": "@(icon-clear.svg)",
		"emote": "@(icon-emote.svg)",
		"erase": "@(icon-erase.svg)",
		"up": "@(icon-up.svg)",
		"ok": "@(icon-ok.svg)"
	}
}